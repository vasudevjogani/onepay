<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.hb.invest.invest.activities.LandingActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/menu_background">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#99000000" />

        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/padding_50"
            android:src="@drawable/logo" />

        <com.example.hb.invest.invest.utiles.views.CustomTextView
            android:id="@+id/tvPin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivLogo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/padding_10"
            android:text="Forgot Pin"
            android:textColor="@color/app_color"
            android:textSize="@dimen/text_16"
            app:font_type="medium" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tvPin"
            android:layout_marginTop="@dimen/padding_20">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/ivLogo"
                android:layout_marginLeft="@dimen/padding_40"
                android:layout_marginRight="@dimen/padding_40"
                android:orientation="vertical">

                <com.example.hb.invest.invest.utiles.views.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_20"
                    android:text="Email"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_13"
                    app:font_type="regular" />

                <com.example.hb.invest.invest.utiles.views.CustomEditText
                    android:id="@+id/etNRCNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_5"
                    android:background="@drawable/input_box_s1"
                    android:gravity="center"
                    android:hint="Enter email"
                    android:paddingLeft="@dimen/padding_20"
                    android:inputType="textEmailAddress"
                    android:paddingRight="@dimen/padding_20"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_16"
                    app:font_type="regular" />

                <com.example.hb.invest.invest.utiles.views.CustomTextView
                    android:id="@+id/tvSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_30"
                    android:background="@drawable/rounded_yellow_btn_selector"
                    android:gravity="center"
                    android:padding="@dimen/padding_10"
                    android:text="SUBMIT"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_15"
                    app:font_type="medium" />


            </LinearLayout>
        </ScrollView>

    </RelativeLayout>
</layout>
