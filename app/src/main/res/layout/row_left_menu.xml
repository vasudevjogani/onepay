<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/llUserImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/padding_40"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivImage"
                android:layout_width="@dimen/padding_80"
                android:layout_height="@dimen/padding_80"
                android:src="@mipmap/ic_launcher" />

            <com.example.hb.invest.invest.utiles.views.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/padding_10"
                android:text="Name"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_18"
                app:font_type="medium" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llUserImage"
            android:orientation="vertical">

            <com.example.hb.invest.invest.utiles.views.CustomTextView
                android:id="@+id/tvSetting"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:drawableLeft="@drawable/icon_view"
                android:drawablePadding="@dimen/padding_20"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/padding_25"
                android:paddingRight="@dimen/padding_25"
                android:text="Setting"
                android:textColor="@color/white_btn_txt_color_selector"
                android:textSize="@dimen/text_16"
                app:font_type="regular" />

            <com.example.hb.invest.invest.utiles.views.CustomTextView
                android:id="@+id/tvAbout"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:drawableLeft="@drawable/icon_view"
                android:drawablePadding="@dimen/padding_20"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/padding_25"
                android:paddingRight="@dimen/padding_25"
                android:text="About Us"
                android:textColor="@color/white_btn_txt_color_selector"
                android:textSize="@dimen/text_16"
                app:font_type="regular" />

            <com.example.hb.invest.invest.utiles.views.CustomTextView
                android:id="@+id/tvTerms"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:drawableLeft="@drawable/icon_view"
                android:drawablePadding="@dimen/padding_20"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/padding_25"
                android:paddingRight="@dimen/padding_25"
                android:text="Terms and Condition"
                android:textColor="@color/white_btn_txt_color_selector"
                android:textSize="@dimen/text_16"
                app:font_type="regular" />

            <com.example.hb.invest.invest.utiles.views.CustomTextView
                android:id="@+id/tvPrivacy"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:drawableLeft="@drawable/icon_view"
                android:drawablePadding="@dimen/padding_20"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/padding_25"
                android:paddingRight="@dimen/padding_25"
                android:text="Privacy Policy"
                android:textColor="@color/white_btn_txt_color_selector"
                android:textSize="@dimen/text_16"
                app:font_type="regular" />

        </LinearLayout>


        <com.example.hb.invest.invest.utiles.views.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/padding_50"
            android:background="@drawable/rounded_white_bg"
            android:drawableLeft="@drawable/ic_logout_grey600_24dp"
            android:drawablePadding="@dimen/padding_8"
            android:gravity="center"
            android:padding="@dimen/padding_12"
            android:text="LOGOUT"
            android:layout_marginBottom="@dimen/padding_15"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_18"
            app:font_type="medium" />

    </RelativeLayout>
</layout>