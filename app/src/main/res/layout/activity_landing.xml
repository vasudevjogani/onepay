<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.hb.invest.invest.activities.LandingActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/menu_background">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#99000000" />

        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/padding_50"
            android:src="@drawable/logo" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/llBottom"
            android:layout_centerInParent="true"
            android:layout_below="@+id/ivLogo">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/ivLogo"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/padding_40"
                android:layout_marginRight="@dimen/padding_40"
                android:orientation="vertical">

                <com.example.hb.invest.invest.utiles.views.CustomTextView
                    android:id="@+id/tvLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_20"
                    android:background="@drawable/rounded_yellow_btn_selector"
                    android:gravity="center"
                    android:padding="@dimen/padding_10"
                    android:text="LOGIN"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_15"
                    app:font_type="medium" />

                <com.example.hb.invest.invest.utiles.views.CustomTextView
                    android:id="@+id/tvRegister"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_20"
                    android:background="@drawable/border_tras_btn_selector"
                    android:gravity="center"
                    android:padding="@dimen/padding_10"
                    android:text="Register"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_17"
                    app:font_type="medium" />
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/llBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_50"
            android:layout_marginRight="@dimen/padding_50"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_5"
                android:visibility="gone"
                android:layout_weight="1"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/box_height"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:clickable="true"
                    app:cardBackgroundColor="@color/app_color"
                    app:cardCornerRadius="15dip"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="true">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/padding_10"
                        android:src="@drawable/mobile"
                        app:riv_corner_radius="10dip"
                        app:riv_mutate_background="true" />

                </android.support.v7.widget.CardView>

                <com.example.hb.invest.invest.utiles.views.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Branch Locator"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_12"
                    app:font_type="regular" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:id="@+id/llExchangeRate"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_5"
                android:layout_weight="1"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/box_height"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    app:cardBackgroundColor="@color/app_color"
                    app:cardCornerRadius="15dip"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="true">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/padding_10"
                        android:src="@drawable/currency_rates" />

                </android.support.v7.widget.CardView>

                <com.example.hb.invest.invest.utiles.views.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Exchange Rates"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_12"
                    app:font_type="regular" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_5"
                android:layout_weight="1"
                android:id="@+id/llContactUs"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/box_height"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    app:cardBackgroundColor="@color/app_color"
                    app:cardCornerRadius="15dip"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="true">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/padding_10"
                        android:src="@drawable/contact_us" />

                </android.support.v7.widget.CardView>

                <com.example.hb.invest.invest.utiles.views.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Contact Us"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_12"
                    app:font_type="regular" />

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</layout>
