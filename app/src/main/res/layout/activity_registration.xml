<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.hb.invest.invest.activities.LandingActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/menu_background">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#99000000" />

        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/padding_50"
            android:src="@drawable/logo" />

        <com.example.hb.invest.invest.utiles.views.CustomTextView
            android:id="@+id/tvRegistartion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivLogo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/padding_10"
            android:text="SELF REGISTRATION"
            android:textColor="@color/app_color"
            android:textSize="@dimen/text_16"
            app:font_type="medium" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tvRegistartion"
            android:layout_marginTop="@dimen/padding_20">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/ivLogo"
                android:layout_marginLeft="@dimen/padding_40"
                android:layout_marginRight="@dimen/padding_40"
                android:orientation="vertical">

                <com.example.hb.invest.invest.utiles.views.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_13"
                    app:font_type="regular" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_5"
                android:background="@drawable/input_box_s1"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/padding_10"
                android:paddingRight="@dimen/padding_20">

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="@dimen/padding_90"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/text_16" />

                <com.example.hb.invest.invest.utiles.views.CustomEditText
                    android:id="@+id/etName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="Enter name"
                    android:background="@android:color/transparent"
                    android:layout_gravity="center_vertical"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_16"
                    app:font_type="regular" />

            </LinearLayout>

                <com.example.hb.invest.invest.utiles.views.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_20"
                    android:text="Email Address"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_13"
                    app:font_type="regular" />

                <com.example.hb.invest.invest.utiles.views.CustomEditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_5"
                    android:background="@drawable/input_box_s1"
                    android:gravity="center"
                    android:hint="Enter email address"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="@dimen/padding_20"
                    android:paddingRight="@dimen/padding_20"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_16"
                    app:font_type="regular" />

                <com.example.hb.invest.invest.utiles.views.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_20"
                    android:text="Mobile number"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_13"
                    app:font_type="regular" />

                <com.example.hb.invest.invest.utiles.views.CustomEditText
                    android:id="@+id/etMobileNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_5"
                    android:background="@drawable/input_box_s1"
                    android:gravity="center"
                    android:hint="Enter mobile number"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:paddingLeft="@dimen/padding_20"
                    android:paddingRight="@dimen/padding_20"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_16"
                    app:font_type="regular" />

                <com.example.hb.invest.invest.utiles.views.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_20"
                    android:text="Gender"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_13"
                    app:font_type="regular" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/input_box_s1"
                    android:paddingLeft="@dimen/padding_20"
                    android:paddingRight="@dimen/padding_20"
                    android:layout_marginTop="@dimen/padding_5"
                    android:layout_height="wrap_content">

                    <Spinner
                        android:id="@+id/spinnerGender"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:textSize="@dimen/text_16" />
                </RelativeLayout>

                <com.example.hb.invest.invest.utiles.views.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_20"
                    android:text="Date of birth"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_13"
                    app:font_type="regular" />

                <com.example.hb.invest.invest.utiles.views.CustomTextView
                    android:id="@+id/tvDOB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_5"
                    android:background="@drawable/input_box_s1"
                    android:gravity="center"
                    android:hint="Select your DOB"
                    android:paddingLeft="@dimen/padding_20"
                    android:paddingRight="@dimen/padding_20"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_16"
                    app:font_type="regular" />

                <com.example.hb.invest.invest.utiles.views.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_20"
                    android:text="Password"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_13"
                    app:font_type="regular" />

                <com.example.hb.invest.invest.utiles.views.CustomEditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_5"
                    android:background="@drawable/input_box_s1"
                    android:gravity="center"
                    android:hint="Enter password"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:paddingLeft="@dimen/padding_20"
                    android:paddingRight="@dimen/padding_20"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_16"
                    app:font_type="regular" />

                <com.example.hb.invest.invest.utiles.views.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_20"
                    android:text="Address  Line1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_13"
                    app:font_type="regular" />

                <com.example.hb.invest.invest.utiles.views.CustomEditText
                    android:id="@+id/etAddress1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_5"
                    android:background="@drawable/input_box_s1"
                    android:gravity="center"
                    android:hint="Enter your address"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="@dimen/padding_20"
                    android:paddingRight="@dimen/padding_20"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_16"
                    app:font_type="regular" />

                <com.example.hb.invest.invest.utiles.views.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_20"
                    android:text="Address  Line2"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_13"
                    app:font_type="regular" />

                <com.example.hb.invest.invest.utiles.views.CustomEditText
                    android:id="@+id/etAddress2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_5"
                    android:background="@drawable/input_box_s1"
                    android:gravity="center"
                    android:hint="Enter your address"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="@dimen/padding_20"
                    android:paddingRight="@dimen/padding_20"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_16"
                    app:font_type="regular" />

                <com.example.hb.invest.invest.utiles.views.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_20"
                    android:text="Town"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_13"
                    app:font_type="regular" />

                <com.example.hb.invest.invest.utiles.views.CustomEditText
                    android:id="@+id/etTown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_5"
                    android:background="@drawable/input_box_s1"
                    android:gravity="center"
                    android:hint="Select your town"
                    android:paddingLeft="@dimen/padding_20"
                    android:paddingRight="@dimen/padding_20"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_16"
                    app:font_type="regular" />

                <com.example.hb.invest.invest.utiles.views.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_20"
                    android:text="City"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_13"
                    app:font_type="regular" />

                <com.example.hb.invest.invest.utiles.views.CustomEditText
                    android:id="@+id/etCity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_5"
                    android:background="@drawable/input_box_s1"
                    android:gravity="center"
                    android:hint="Enter your city"
                    android:imeOptions="actionNext"
                    android:paddingLeft="@dimen/padding_20"
                    android:paddingRight="@dimen/padding_20"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_16"
                    app:font_type="regular" />

                <com.example.hb.invest.invest.utiles.views.CustomTextView
                    android:id="@+id/tvSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_30"
                    android:background="@drawable/rounded_yellow_btn_selector"
                    android:gravity="center"
                    android:padding="@dimen/padding_10"
                    android:text="SUBMIT"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_15"
                    app:font_type="medium" />


            </LinearLayout>
        </ScrollView>

    </RelativeLayout>
</layout>
