<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_color"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black_trans"
            android:paddingTop="@dimen/padding_20">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/padding_20">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/ivLogo"
                    android:layout_marginLeft="@dimen/padding_40"
                    android:layout_marginRight="@dimen/padding_40"
                    android:orientation="vertical">

                    <com.example.hb.invest.invest.utiles.views.CustomEditText
                        android:id="@+id/etFirstName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_5"
                        android:background="@drawable/input_box_s1"
                        android:gravity="center"
                        android:hint="Enter First name"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:paddingLeft="@dimen/padding_20"
                        android:paddingRight="@dimen/padding_20"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_16"
                        app:font_type="regular" />

                    <com.example.hb.invest.invest.utiles.views.CustomEditText
                        android:id="@+id/etLastName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_15"
                        android:background="@drawable/input_box_s1"
                        android:gravity="center"
                        android:hint="Enter Last name"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:paddingLeft="@dimen/padding_20"
                        android:paddingRight="@dimen/padding_20"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_16"
                        app:font_type="regular" />

                    <com.example.hb.invest.invest.utiles.views.CustomEditText
                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_15"
                        android:background="@drawable/input_box_s1"
                        android:gravity="center"
                        android:hint="Enter Email"
                        android:imeOptions="actionNext"
                        android:inputType="textEmailAddress"
                        android:paddingLeft="@dimen/padding_20"
                        android:paddingRight="@dimen/padding_20"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_16"
                        app:font_type="regular" />

                    <com.example.hb.invest.invest.utiles.views.CustomEditText
                        android:id="@+id/etNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_15"
                        android:background="@drawable/input_box_s1"
                        android:gravity="center"
                        android:hint="Enter Mobile number"
                        android:imeOptions="actionDone"
                        android:inputType="number"
                        android:paddingLeft="@dimen/padding_20"
                        android:paddingRight="@dimen/padding_20"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_16"
                        app:font_type="regular" />

                    <com.example.hb.invest.invest.utiles.views.CustomEditText
                        android:id="@+id/etDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_15"
                        android:background="@drawable/input_box_s1"
                        android:gravity="top|center"
                        android:hint="Is there anything you would like to tell us?"
                        android:imeOptions="actionDone"
                        android:lines="5"
                        android:padding="@dimen/padding_10"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_16"
                        app:font_type="regular" />

                    <com.example.hb.invest.invest.utiles.views.CustomTextView
                        android:id="@+id/tvSend"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_30"
                        android:background="@drawable/rounded_yellow_btn_selector"
                        android:gravity="center"
                        android:padding="@dimen/padding_10"
                        android:text="SEND FEEDBACK"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_15"
                        app:font_type="medium" />

                </LinearLayout>
            </ScrollView>
        </ScrollView>
    </LinearLayout>

</layout>
