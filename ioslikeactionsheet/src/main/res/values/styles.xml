<resources>

    <style name="bottomMenuText1" >
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/color_primary_dialog</item>
        <item name="android:padding">@dimen/tendp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/actionsheet_selector</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/show_from_bottom_menu</item>
        <item name="android:windowExitAnimation">@anim/hide_to_bottom_menu</item>
    </style>

    <style name="ActionSheetTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>
</resources>